{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src", "types"],
    "exclude": ["node_modules"]
}
